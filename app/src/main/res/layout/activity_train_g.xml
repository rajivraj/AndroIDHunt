<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainGActivity"
    android:background="@color/bck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Improper Logging"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/corner"
            android:textColor="@color/btnTextColor"
            android:id="@+id/log1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Private Dir."
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/corner"
            android:textColor="@color/btnTextColor"
            android:id="@+id/pridir"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Sensitive in XML"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/corner"
            android:textColor="@color/btnTextColor"
            android:id="@+id/source"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Sensitive in Classes"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/corner"
            android:textColor="@color/btnTextColor"
            android:id="@+id/classes"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColor"
            android:text="More Things Will Come"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

</ScrollView>